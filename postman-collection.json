{
  "info": {
    "name": "HTTP Status Codes Demo",
    "description": "Collection to test all HTTP status codes",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "authToken",
      "value": "Bearer valid-token-123"
    }
  ],
  "item": [
    {
      "name": "2xx Success",
      "item": [
        {
          "name": "200 - Get All Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "{{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            }
          }
        },
        {
          "name": "200 - Get Single User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "{{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "1"]
            }
          }
        },
        {
          "name": "201 - Create User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "{{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Alice Wonder\",\n  \"email\": \"alice@example.com\",\n  \"role\": \"user\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            }
          }
        },
        {
          "name": "204 - Delete User",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "{{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/2",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "2"]
            }
          }
        }
      ]
    },
    {
      "name": "3xx Redirection",
      "item": [
        {
          "name": "301 - Permanent Redirect",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users",
              "host": ["{{baseUrl}}"],
              "path": ["users"]
            }
          }
        },
        {
          "name": "302 - Temporary Redirect",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/login",
              "host": ["{{baseUrl}}"],
              "path": ["login"]
            }
          }
        },
        {
          "name": "304 - Not Modified",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "If-None-Match",
                "value": "\"config-v1.0\""
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/static/config",
              "host": ["{{baseUrl}}"],
              "path": ["api", "static", "config"]
            }
          }
        }
      ]
    },
    {
      "name": "4xx Client Errors",
      "item": [
        {
          "name": "400 - Bad Request (Missing Field)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "{{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            }
          }
        },
        {
          "name": "400 - Bad Request (Invalid Email)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "{{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"invalid-email\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            }
          }
        },
        {
          "name": "401 - Unauthorized (No Token)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            }
          }
        },
        {
          "name": "401 - Unauthorized (Invalid Token)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer invalid-token"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            }
          }
        },
        {
          "name": "404 - Not Found (User)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "{{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/99999",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "99999"]
            }
          }
        },
        {
          "name": "404 - Not Found (Route)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/nonexistent",
              "host": ["{{baseUrl}}"],
              "path": ["api", "nonexistent"]
            }
          }
        }
      ]
    },
    {
      "name": "5xx Server Errors",
      "item": [
        {
          "name": "500 - Internal Server Error",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/error/server",
              "host": ["{{baseUrl}}"],
              "path": ["api", "error", "server"]
            }
          }
        },
        {
          "name": "502 - Bad Gateway",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/external/data",
              "host": ["{{baseUrl}}"],
              "path": ["api", "external", "data"]
            }
          }
        },
        {
          "name": "503 - Enable Maintenance Mode",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "{{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"enabled\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/maintenance",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "maintenance"]
            }
          }
        },
        {
          "name": "503 - Service Unavailable",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "503 - Disable Maintenance Mode",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "{{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"enabled\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/maintenance",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "maintenance"]
            }
          }
        },
        {
          "name": "504 - Gateway Timeout",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/slow/operation",
              "host": ["{{baseUrl}}"],
              "path": ["api", "slow", "operation"]
            }
          }
        }
      ]
    },
    {
      "name": "Utility",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        }
      ]
    }
  ]
}
